# HealthApp Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Database Configuration
# ===================
DATABASE_NAME=healthapp
DATABASE_USER=healthapp_user
DATABASE_PASSWORD=change_this_secure_password

# For local development (without Docker)
# DATABASE_URL=postgresql://healthapp_user:healthapp_pass@localhost:5432/healthapp

# ===================
# Backend Security
# ===================
# Generate a secure key with: openssl rand -hex 32
SECRET_KEY=change_this_to_a_long_random_string_at_least_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===================
# Application
# ===================
APP_NAME=HealthApp API
DEBUG=False

# ===================
# CORS Origins
# ===================
# Update with your actual frontend URLs
# For Docker: include both localhost and server IP
CORS_ORIGINS=["http://localhost:5173","http://localhost:80","http://127.0.0.1:5173","http://192.168.1.44","http://192.168.1.44:80"]

# ===================
# Frontend API URL
# ===================
# For Docker deployment
VITE_API_URL=http://192.168.1.44:8000
# For local development
# VITE_API_URL=http://localhost:8000

# ===================
# Docker Compose
# ===================
COMPOSE_PROJECT_NAME=healthapp
